{
  "name": "boilerplate",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/boilerplate/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/boilerplate",
        "main": "apps/boilerplate/src/main.ts",
        "tsConfig": "apps/boilerplate/tsconfig.app.json",
        "assets": []
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/boilerplate/src/environments/environment.ts",
              "with": "apps/boilerplate/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "boilerplate:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "boilerplate:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/boilerplate/**/*.ts",
          "apps/boilerplate/**/*.tsx",
          "apps/boilerplate/**/*.js",
          "apps/boilerplate/**/*.jsx"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/boilerplate/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": [
    "api"
  ]
}
